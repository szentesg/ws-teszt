<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Easy Readable Date Generator</title>

		<!-- Bootstrap 5 CDN -->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
	</head>
	<body class="bg-light py-5">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6">
					<h1 class="text-center mb-4">Easy Readable Date Generator</h1>

					<div class="card shadow-sm">
						<div class="card-body">
							{{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
							<div class="mb-3">
								{{ form_label(form.seconds, null, {'label_attr': {'class': 'form-label'}}) }}
								{{ form_widget(form.seconds, {'attr': {'class': 'form-control'}}) }}
								{{ form_errors(form.seconds) }}
							</div>
							<div class="d-grid">
								{{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
							</div>
							{{ form_end(form) }}
						</div>
					</div>

					{% if formattedDate %}
						<div class="alert alert-success mt-4 text-center">
							<h4 class="alert-heading">Formatted Date:</h4>
							<p class="mb-0">{{ formattedDate }}</p>
						</div>
					{% endif %}
				</div>
			</div>
		</div>

		<!-- Optional Bootstrap JS (if you plan to use features like modals or tooltips) -->
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
	</body>
</html>
